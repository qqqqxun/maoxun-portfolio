# 微信公众号配置
WECHAT_TOKEN=your_wechat_token_here
WECHAT_APP_ID=your_app_id_here
WECHAT_APP_SECRET=your_app_secret_here

# AI配置 (支持OpenAI GPT和阿里云通义千问)
OPENAI_API_KEY=sk-your_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-3.5-turbo

# 阿里云通义千问配置示例 (替换上面的配置)
# OPENAI_API_KEY=sk-your_dashscope_api_key
# OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
# AI_MODEL=qwen-turbo

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 数据库配置
DATABASE_URL=sqlite:///./ai_customer_service.db

# 系统配置
MAX_RESPONSE_TIME=1
CACHE_EXPIRE_TIME=3600
MAX_MESSAGE_LENGTH=2000

# 人工转接配置
HUMAN_SERVICE_WEBHOOK=https://your-domain.com/webhook/human_service

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/ai_customer_service.log

# 订单API配置 (可选)
ORDER_API_URL=https://your-order-api.com/api/v1
ORDER_API_TOKEN=your_order_api_token

# 限流配置
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# 应用配置
APP_ENV=development
APP_DEBUG=true